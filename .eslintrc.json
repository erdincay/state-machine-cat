{
  "root": true,
  "extends": ["moving-meadow"],
  "overrides": [
    {
      "files": ["**/*.js"],
      "rules": {
        "unicorn/no-null": "off"
      }
    },
    {
      "files": ["test/**/*.js"],
      "env": {
        "mocha": true
      },
      "rules": {
        "node/global-require": "off",
        "no-magic-numbers": "off",
        "security/detect-non-literal-require": "off",
        "security/detect-non-literal-fs-filename": "off",
        "max-lines-per-function": "off",
        "max-lines": "off",
        "no-null": "off"
      }
    }
  ]
}
